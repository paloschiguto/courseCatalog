{
  "compilerOptions": {
    "lib": ["es5", "es6", "ES2020", "DOM"],
    "target": "ES2020",
    "module": "CommonJS", 
    "rootDir": "./",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "outDir": "./build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strict": false,  
    "sourceMap": true,
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["src/**/*.ts", "server.ts"],
  "exclude": ["node_modules"]
}
